#!/usr/bin/env bash
# This script installs Nginx, configures firewall, and sets up an index.html page with 'Holberton School'

# Update package list and install nginx
sudo apt-get update
sudo apt-get -y install nginx

# Allow Nginx HTTP traffic through the firewall
sudo ufw allow 'Nginx HTTP'

# Create index.html with "Holberton School"
echo "Holberton School" | sudo tee /var/www/html/index.html

# Test nginx configuration for syntax errors
sudo nginx -t

# Restart nginx without using systemctl (use service instead)
sudo service nginx restart

